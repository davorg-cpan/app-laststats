#!/usr/bin/perl -CS

use strict;
use warnings;

use Getopt::Long;

use App::LastStats;

my $lastfm;

if (@ARGV == 1) {
  $lastfm = App::LastStats->new(username => $ARGV[0]);
} else {
  my %opts;
  GetOptions(\%opts, 'user=s', 'count=i', 'format=s', 'period=s');

  $lastfm = App::LastStats->new(%opts);
}

$lastfm->run;
